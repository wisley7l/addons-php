{% macro star_on(n)%}
  {% for i in 0..n-1 if n > 0 %}
  <li class="rating-item">
    <!-- SVG STAR -->
    <svg class="svg-star">
      <use xlink:href="#svg-star"></use>
    </svg>
    <!-- /SVG STAR -->
  </li>
  {% endfor %}
{% endmacro %}

{% macro star_off(n)%}
  {% for i in 0..n-1 if n > 0  %}
  <li class="rating-item empty">
    <!-- SVG STAR -->
    <svg class="svg-star">
      <use xlink:href="#svg-star"></use>
    </svg>
    <!-- /SVG STAR -->
  </li>
  {% endfor %}
{% endmacro %}

<!-- use macro to print application or theme information -->
{% macro apps_themes(apps, init, end, word_favorate, word_go_item)%}
  {% for app in apps %}
    {% if loop.index0 >= init and loop.index0 < end %}
  					<div class="product-item column">
  						<!-- PRODUCT PREVIEW ACTIONS -->
  						<div class="product-preview-actions">
  							<!-- PRODUCT PREVIEW IMAGE -->
  							<figure class="product-preview-image">
  								<img src="{{app.image}}" alt="product-image">
  							</figure>
  							<!-- /PRODUCT PREVIEW IMAGE -->

  							<!-- PREVIEW ACTIONS -->
  							<div class="preview-actions">
  								<!-- PREVIEW ACTION -->
  								<div class="preview-action">
  									<a href="item-v1.html">
  										<div class="circle tiny primary">
  											<span class="icon-tag"></span>
  										</div>
  									</a>
  									<a href="item-v1.html">
  										<p>{{ word_go_item }}</p>
  									</a>
  								</div>
  								<!-- /PREVIEW ACTION -->

  								<!-- PREVIEW ACTION -->
  								<div class="preview-action">
  									<a href="#">
  										<div class="circle tiny secondary">
  											<span class="icon-heart"></span>
  										</div>
  									</a>
  									<a href="#">
  										<p>{{ word_favorate }}</p>
  									</a>
  								</div>
  								<!-- /PREVIEW ACTION -->
  							</div>
  							<!-- /PREVIEW ACTIONS -->
  						</div>
  						<!-- /PRODUCT PREVIEW ACTIONS -->

  						<!-- PRODUCT INFO -->
  						<div class="product-info">
  							<a href="item-v1.html">
  								<p class="text-header"> {{ app.name }} </p>
  							</a>
  							<p class="product-description">{{ app.description }}</p>
  							<a href="shop-gridview-v1.html">
  								<p class="category primary">{{ app.category }}</p>
  							</a>
  							<p class="price"><span>R$</span>{{ app.value | number_format(2, '.', ',') }}</p>
  						</div>
  						<!-- /PRODUCT INFO -->
  						<hr class="line-separator">

  						<!-- USER RATING -->
  						<div class="user-rating">
  							<a href="author-profile.html">
  								<figure class="user-avatar small">
  									<img src="../images/avatars/avatar_01.jpg" alt="user-avatar">
  								</figure>
  							</a>
  							<a href="author-profile.html">
  								<p class="text-header tiny">{{ app.name_partner }}</p>
  							</a>
  							<ul class="rating tooltip" title="{{ word_reputation }}">
  								{% import 'macros.twig' as silexCasts %}
                  <!-- use macros to render stars -->
  								{{silexCasts.star_on(app.star_on)}}
  								{{silexCasts.star_off(app.star_off)}}
  							</ul>
  						</div>
  						<!-- /USER RATING -->
  					</div>
    {% endif %}
  {% endfor %}
{% endmacro %}
