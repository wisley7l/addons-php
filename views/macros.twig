{% macro star_on(n)%}
  {% for i in 0..n-1 if n > 0 %}
  <li class="rating-item">
    <!-- SVG STAR -->
    <svg class="svg-star">
      <use xlink:href="#svg-star"></use>
    </svg>
    <!-- /SVG STAR -->
  </li>
  {% endfor %}
{% endmacro %}

{% macro star_off(n)%}
  {% for i in 0..n-1 if n > 0  %}
  <li class="rating-item empty">
    <!-- SVG STAR -->
    <svg class="svg-star">
      <use xlink:href="#svg-star"></use>
    </svg>
    <!-- /SVG STAR -->
  </li>
  {% endfor %}
{% endmacro %}

